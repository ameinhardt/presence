{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["package.json", "vite.config.*", "src/typings/environment.d.ts", "src/**/*", "src/**/*.vue"],
  "env": {
    "browser": true
  },
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "composite": true,
    "types": [
      "vite-plugin-pwa/client"
    ],
    "lib": [
      "ESNext",
      "DOM.Iterable",
      "DOM"
    ],
    "baseUrl": "."
  }
}
